{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@assets/*": ["./src/assets/*"],
      "@components/*": ["./src/components/*"],
      "@views/*": ["./src/views/*"],
      "@api/*": ["./src/api/*"],
      "@constants/*": ["./src/constants/*"],
      "@constants": ["./src/constants"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
